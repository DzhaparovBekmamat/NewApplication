<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">/>
            <corners android:radius="10dp" /> <!-- Укажите радиус скругления углов, если нужно -->
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <solid android:color="#FF0000" /> <!-- Цвет для заполненной области прогресса -->
                <corners android:radius="10dp" /> <!-- Укажите радиус скругления углов, если нужно -->
            </shape>
        </clip>
    </item>
    <item android:drawable="@drawable/group"/>
</layer-list>
